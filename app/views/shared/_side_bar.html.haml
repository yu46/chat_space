.side-bar    
  .side-bar__header
    .side-bar__header__box
      %h3
        = current_user.name
      .side-bar__header__box__tool
        =link_to new_group_path do
          %i.fa.fa-edit
        =link_to edit_user_path(current_user) do
          %i.fa.fa-cog
  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__group
        = link_to group_messages_path(group) do
          %P.side-bar__group__title
            = group.name
          %P.side-bar__group__message
            =group.show_last_message